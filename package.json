{
  "name": "@gittrends-app/core",
  "version": "3.2.0",
  "main": "./dist/index.js",
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "scripts": {
    "lint": "biome check ./src",
    "lint:fix": "biome check --write ./src",
    "format": "biome format --write ./src",
    "build:compile": "tsup-node src/index.ts --format esm --sourcemap --minify",
    "build:types": "tsc --emitDeclarationOnly",
    "build:clean": "shx rm -rf ./dist tsconfig.tsbuildinfo",
    "build": "run-s build:clean build:compile build:types",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "verify": "run-s lint build test",
    "prepublishOnly": "npm run verify",
    "release": "release-it",
    "generate:schema": "graphql-codegen --config codegen.ts"
  },
  "dependencies": {
    "@octokit/graphql": "^9.0.3",
    "@octokit/types": "^16.0.0",
    "dayjs": "^1.11.13",
    "hash-it": "^6.0.0",
    "lodash": "^4.17.21",
    "p-limit": "^6.2.0",
    "zod": "^3.25.67",
    "zod-validation-error": "^3.5.2"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@graphql-codegen/cli": "^6.1.0",
    "@graphql-codegen/typescript": "^5.0.7",
    "@inquirer/prompts": "^7.5.3",
    "@tsconfig/node20": "^20.1.6",
    "@types/lodash": "^4.17.19",
    "@types/node": "^24.0.4",
    "@types/prettyjson": "^0.0.33",
    "@vitest/coverage-v8": "^3.2.4",
    "auto-changelog": "^2.5.0",
    "commitizen": "^4.3.1",
    "consola": "^3.4.2",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv-flow": "^4.1.0",
    "graphql": "^16.12.0",
    "husky": "^9.1.7",
    "npm-run-all": "^4.1.5",
    "prettyjson": "^1.2.5",
    "release-it": "^18.1.2",
    "shx": "^0.3.4",
    "table": "^6.9.0",
    "tsc-alias": "^1.8.16",
    "tsup": "^8.5.0",
    "tsx": "^4.20.3",
    "type-fest": "^5.3.1",
    "typescript": "^5.8.3",
    "vitest": "^2.1.8"
  },
  "files": ["dist", "package.json", "CHANGELOG.md", "README.md"],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "gittrends": {
    "schemaRevision": "2025-08-26"
  }
}
