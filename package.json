{
  "name": "@gittrends-app/core",
  "version": "4.3.2",
  "main": "./dist/index.js",
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "lint": "biome check ./src",
    "lint:fix": "biome check --write ./src",
    "format": "biome format --write ./src",
    "build:compile": "tsup-node src/index.ts --format esm --sourcemap --minify",
    "build:types": "tsc --emitDeclarationOnly",
    "build:clean": "shx rm -rf ./dist tsconfig.tsbuildinfo",
    "build": "run-s build:clean build:compile build:types",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "verify": "run-s lint build test",
    "prepublishOnly": "npm run verify",
    "release": "release-it",
    "generate:schema": "graphql-codegen --config codegen.ts"
  },
  "dependencies": {
    "@octokit/graphql": "^9.0.3",
    "@octokit/types": "^16.0.0",
    "dayjs": "^1.11.19",
    "hash-it": "^7.0.2",
    "lodash": "^4.17.23",
    "p-limit": "^7.2.0",
    "zod": "^4.3.6",
    "zod-validation-error": "^5.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.12",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@graphql-codegen/cli": "^6.1.1",
    "@graphql-codegen/typescript": "^5.0.7",
    "@inquirer/prompts": "^8.2.0",
    "@tsconfig/node20": "^20.1.8",
    "@types/lodash": "^4.17.23",
    "@types/node": "^25.0.10",
    "@types/prettyjson": "^0.0.33",
    "@vitest/coverage-v8": "^4.0.18",
    "auto-changelog": "^2.5.0",
    "commitizen": "^4.3.1",
    "consola": "^3.4.2",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv-flow": "^4.1.0",
    "graphql": "^16.12.0",
    "husky": "^9.1.7",
    "npm-run-all": "^4.1.5",
    "prettyjson": "^1.2.5",
    "release-it": "^19.2.4",
    "shx": "^0.4.0",
    "table": "^6.9.0",
    "tsc-alias": "^1.8.16",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "type-fest": "^5.4.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "files": ["dist", "package.json", "CHANGELOG.md", "README.md"],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "gittrends": {
    "schemaRevision": "2025-12-22"
  }
}
