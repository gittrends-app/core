{
  "name": "@gittrends-app/core",
  "version": "3.1.0",
  "main": "./dist/index.js",
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "scripts": {
    "lint": "eslint --ext .ts ./src",
    "build:compile": "tsup-node src/index.ts --format esm --sourcemap --minify",
    "build:types": "tsc --emitDeclarationOnly",
    "build:clean": "shx rm -rf ./dist tsconfig.tsbuildinfo",
    "build": "run-s build:clean build:compile build:types",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "verify": "run-s lint build test",
    "prettier": "prettier --write src",
    "prepublishOnly": "npm run verify",
    "release": "release-it"
  },
  "dependencies": {
    "@octokit/graphql": "^9.0.1",
    "@octokit/graphql-schema": "^15.26.0",
    "@octokit/types": "^14.1.0",
    "dayjs": "^1.11.13",
    "hash-it": "^6.0.0",
    "lodash": "^4.17.21",
    "p-limit": "^6.2.0",
    "zod": "^3.25.67",
    "zod-validation-error": "^3.5.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@inquirer/prompts": "^7.5.3",
    "@tsconfig/node20": "^20.1.6",
    "@types/lodash": "^4.17.19",
    "@types/node": "^24.0.4",
    "@types/prettyjson": "^0.0.33",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "@vitest/coverage-v8": "^3.2.4",
    "auto-changelog": "^2.5.0",
    "commitizen": "^4.3.1",
    "consola": "^3.4.2",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv-flow": "^4.1.0",
    "eslint": "^8.54.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.1",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettyjson": "^1.2.5",
    "release-it": "^18.1.2",
    "shx": "^0.3.4",
    "table": "^6.9.0",
    "tsc-alias": "^1.8.16",
    "tsup": "^8.5.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^2.1.8"
  },
  "files": [
    "dist",
    "package.json",
    "CHANGELOG.md",
    "README.md"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
